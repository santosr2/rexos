{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(go:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(golangci-lint:*)",
      "Bash(gofmt:*)",
      "Bash(go test:*)",
      "Bash(go build:*)",
      "Bash(go mod:*)"
    ],
    "deny": [
      "Bash(git push --force:*)",
      "Bash(rm -rf /*:*)"
    ],
    "ask": [
      "Bash(rm:*)",
      "Bash(git push:*)",
      "Bash(git commit:*)",
      "Bash(gh pr create:*)"
    ],
    "defaultMode": "default"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "gofmt -w $FILE_PATH 2>/dev/null || true",
            "timeout": 10
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'ðŸ“– Remember to check CLAUDE.md for project structure and agent system!'",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'ðŸ“– Remember to check .claude/PROMPT.md for project context!'",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
