{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(cargo:*)",
      "Bash(rustc:*)",
      "Bash(rustup:*)",
      "Bash(cross:*)",
      "Bash(mise:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git branch:*)",
      "Bash(git show:*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(echo:*)",
      "Bash(touch:*)",
      "Bash(mkdir:*)",
      "Bash(grep:*)",
      "Bash(test:*)",
      "Bash(pre-commit run:*)",
      "Bash(shellcheck:*)",
      "Bash(shfmt:*)",
      "Bash(make:*)",
      "FileSystem(read:*)"
    ],
    "deny": [
      "Bash(git push --force:*)",
      "Bash(git push -f:*)",
      "Bash(rm -rf /*:*)",
      "Bash(rm -rf /:*)",
      "Bash(sudo rm:*)"
    ],
    "ask": [
      "Bash(rm:*)",
      "Bash(git push:*)",
      "Bash(git commit:*)",
      "Bash(gh pr create:*)",
      "Bash(cargo publish:*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "if [[ \"$CLAUDE_FILE_PATH\" == *.rs ]]; then rustfmt --edition 2024 \"$CLAUDE_FILE_PATH\" 2>/dev/null || true; fi",
            "timeout": 10
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "if [[ \"$CLAUDE_FILE_PATH\" == *.rs ]]; then cargo clippy --quiet -- -D warnings 2>&1 | head -5 || true; fi",
            "timeout": 30
          }
        ]
      }
    ]
  },
  "env": {
    "RUST_BACKTRACE": "1",
    "CARGO_TERM_COLOR": "always"
  }
}
